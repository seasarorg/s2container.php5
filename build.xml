<?xml version="1.0"?>
<project name="s2container.php5" default="info" basedir=".">

    <taskdef name="copy2" classname="src.phing.task.CopyFilesToOneDirTask" />
    <taskdef name="gcore" classname="src.phing.task.GenerateCoreFileTask" />
    <taskdef name="alltest" classname="src.phing.task.PHPUnitAllTestTask" />

    <target name="init">
        <property name="project.name" value="${phing.project.name}" />
        <property name="package.name" value="S2Container" />
        <property name="project.version" value="1.2.0RC1" />
        <property name="project.state" value="beta" />
        <property name="project.build.dir" value="${project.basedir}/build" />
        <property name="project.src.dir" value="${project.basedir}/src" />
        <property name="project.pear.uri" value="http://s2container.php5.seasar.org/download/S2Container-${project.version}" />
        <property name="license.file" value="Apache_Software_License_2.0.txt" />
        <property name="release.notes" value="Release ${project.version}" />
        <property name="td" value="" />
        <property name="tt" value="**/*Test.class.php" />
        <property name="dd" value="" />
    </target>

    <target name="clean" depends="init">
        <delete dir="${project.build.dir}"/>
    </target>

    <target name="prepare" depends="init">
        <mkdir dir="${project.build.dir}" />
        <mkdir dir="${project.build.dir}/${project.name}/${package.name}" />
    </target>

    <target name="build" depends="prepare">
        <copy2 toDir="${project.build.dir}/${project.name}/${package.name}">
            <fileset dir="${project.src.dir}">
                <include name="${project.name}/**/*.php"/>
                <include name="${project.name}/**/*.properties"/>
            </fileset>
        </copy2>

        <gcore searchDir="${project.build.dir}/${project.name}/${package.name}"
               coreFile="${project.build.dir}/${project.name}/s2container.core.classes.php"
               listFile="${project.basedir}/src/phing/etc/s2container.core.files.txt"/>

        <copy file="${project.basedir}/src/phing/etc/S2Container.php.tpl"
              tofile="${project.build.dir}/${project.name}/S2Container.php"
              overwrite="true"/>

        <copy file="${project.basedir}/${license.file}"
              tofile="${project.build.dir}/${project.name}/${license.file}"
              overwrite="true"/>
    </target>

    <target name="pear-pkg" depends="build">
        <pearpkg2 name="${package.name}" 
                  dir="${project.build.dir}/${project.name}">
            <fileset dir="${project.build.dir}/${project.name}">
                <include name="**/*"/>
            </fileset>
            <option name="outputdirectory" value="${project.build.dir}/${project.name}"/>
            <option name="packagefile" value="package2.xml"/>
            <!-- option name="uri" value="http://s2container.php5.seasar.org/"/ -->
            <option name="channel" value="pear.php.net"/>
            <option name="summary">S2Container.PHP5, a lightweight container supports DI and AOP.</option>
            <option name="description">S2Container is a lightweight container which supports DI(Dependency Injection) and AOP(Aspect Oriented Programming). The goal of S2Container.PHP5 project is to port Java Seasar2 to PHP5.</option>
            <option name="releaseversion" value="${project.version}"/>
            <option name="releasestability" value="${project.state}"/>
            <option name="license" value="The Apache License, Version 2.0"/>
            <option name="notes">${release.notes}</option>
            <option name="phpdep" value="5.2.0"/>
            <option name="pearinstallerdep" value="1.4.11"/>
            <option name="packagetype" value="php"/>
            <option name="apiversion" value="${project.version}"/>
            <option name="apistability" value="${project.state}"/>
            <option name="baseinstalldir" value="${package.name}"/>
            <mapping name="deps">
                <element>
                    <element key="type" value="pkg"/>
                    <element key="rel" value="has"/>
                    <element key="name" value="Cache_Lite"/>
                    <element key="channel" value="pear.php.net"/>
                    <element key="optional" value="true"/>
                </element>
            </mapping>
            <mapping name="maintainers">
                <element>
                    <element key="handle" value="klove"/>
                    <element key="name" value="klove"/>
                    <element key="email" value="seasar-s2dicon-php5@lists.sourceforge.jp"/>
                    <element key="role" value="lead"/>
                </element>
                <element>
                    <element key="handle" value="nowel"/>
                    <element key="name" value="nowel"/>
                    <element key="email" value="seasar-s2dicon-php5@lists.sourceforge.jp"/>
                    <element key="role" value="developer"/>
                </element>
            </mapping>
            <mapping name="exceptions">
                <element key="Apache_Software_License_2.0.txt" value="php"/>
            </mapping>
        </pearpkg2>

        <reflexive>
            <fileset dir="${project.build.dir}/${project.name}">
                <include name="package2.xml"/>
            </fileset>
            <filterchain>
                <replaceregexp>
                    <regexp pattern="=(.)data(.)" replace="=\1php\2" ignoreCase="true"/>
                </replaceregexp>
            </filterchain>
        </reflexive>
        <exec command="pear package package2.xml" 
              dir="${project.build.dir}/${project.name}" />

        <move toDir="${project.build.dir}/pear" overwrite="true">
            <fileset dir="${project.build.dir}/${project.name}">
                <include name="*.tgz"/>
                <include name="package*.xml"/>
            </fileset>
        </move>
    </target>

    <target name="test" depends="build">
        <echo>test directory : test/${project.name}/${td}</echo>
        <echo>test target    : ${tt}</echo>
        <php expression="require_once('test/test.inc.php')"/>
        <phpunit3 haltonfailure="false" haltonerror="false">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset dir="test/${project.name}/${td}">
                    <include name="${tt}"/>
                </fileset>
            </batchtest>
        </phpunit3>
    </target>
    
    <target name="all-test" depends="build">
        <echo>test directory : test/${project.name}/${td}</echo>
        <php expression="require_once('test/test.inc.php')"/>
        <alltest name="${project.name} All Test">
            <fileset dir="test/${project.name}/${td}">
                <include name="${tt}"/>
                <exclude name="**/*PDO*/**"/>
                <exclude name="**/*InterType*/**"/>
                <exclude name="**/*Memcache*/**"/>
                <exclude name="**/*Yaml*/**"/>
                <exclude name="**/S2Container_AbstractPropertyInterTypeTest*"/>
                <exclude name="**/S2Container_AbstractCacacheSupportTest*"/>
            </fileset>
        </alltest>
    </target>

    <target name="doc" depends="prepare">
        <echo>src directory : ${project.src.dir}/${project.name}/${dd}</echo>
        <phpdoc title="${project.name} Documentation"
            destdir="${project.build.dir}/apidocs"
            sourcepath="${project.src.dir}/${project.name}/${dd}"
            output="HTML:Smarty:PHP"
            parseprivate="true"
            linksource="false"/>
    </target>

    <target name="info">
        <echo message="" />
        <echo message="S2Container.PHP5 build script" />
        <echo message="----------------------------" />
        <echo message="available targets:"/>
        <echo message="" />
        <echo message="build    ---> build all; don't create pear-package" />
        <echo message="pear-pkg ---> create pear-package" />
        <echo message="test     ---> run unit test suite from test/s2container.php5/" />
        <echo message="all-test ---> run unit test suite from test/s2container.php5/" />
        <echo message="doc      ---> run phpdoc from src/s2container.php5/" />
        <echo message="clean    ---> remove build directory" />
        <echo message="----------------------------" />
        <echo message="" />
    </target>
</project>
